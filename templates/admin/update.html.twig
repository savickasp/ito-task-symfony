{% extends 'base.html.twig' %}

{% block title %}Update User{% endblock %}

{% block body %}
	<div class="container h-60vh d-flex justify-content-center align-items-center">
		<form method="post" class="w-50">
			{% if(error) %}
				<h3 class="alert-danger">{{ error }}</h3>
			{% endif %}
			<div class="form-group mb-2">
				<label>Email: </label>
				<input class="form-control" type="text" name="email" value="{{ user.email }}" disabled>
			</div>
			<div class="form-group mb-2">
				<label>Name: </label>
				<input class="form-control" type="text" name="name" value="{{ user.name }}">
			</div>
			<div class="form-group mb-2">
				<label>Password: </label>
				<input class="form-control" type="text" name="password" value="{{ user.password }}">
			</div>
			<div class="form-group mb-2">
				<label>Confirm password: </label>
				<input class="form-control" type="text" name="password_confirm" value="" placeholder="repeat password">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
{% endblock %}
